# Database — PostgreSQL (local or Supabase)
# Local: DATABASE_URL="postgresql://postgres:password@localhost:5432/capitalguard"
# Supabase: DATABASE_URL="postgresql://postgres.xxxx:password@aws-0-region.pooler.supabase.com:6543/postgres"
DATABASE_URL="postgresql://postgres:password@localhost:5432/capitalguard"

# Redis (optional — app works without it; use Upstash for production)
REDIS_URL=""

# OpenAI API Key — get from https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# ICICI Breeze API — get from https://api.icicidirect.com
BREEZE_API_KEY=""
BREEZE_SECRET_KEY=""
BREEZE_SESSION_TOKEN=""

# JWT signing secret (generate with: openssl rand -base64 32)
JWT_SECRET=""
JWT_ALGORITHM="HS256"
JWT_EXPIRES_IN="24h"

# Encryption key for stored credentials (generate with: openssl rand -base64 32)
# MUST be different from JWT_SECRET
ENCRYPTION_KEY=""

# CORS origins (comma-separated)
CORS_ORIGINS="http://localhost:5173"

# Server
HOST="0.0.0.0"
PORT=8000
